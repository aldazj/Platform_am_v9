<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t('group.title') %> <small><%= t('group.description') %></small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i>  <%= t('group.title') %>  </li>
      </ol>
    </div>
  </div>

  <div>
    <div class="row">
      <div class="col-lg-6">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
            <tr>
              <th><%= t('name_label') %><i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
            </tr>
            </thead>
            <tbody>
            <% @groups.each do |group| %>
                <tr>
                  <td><%= group.name %></td>
                  <td><%= link_to t('action.show'), group %></td>
                  <td><%= link_to t('action.edit'), edit_group_path(group) %></td>
                  <td><%= link_to t('action.destroy'), group, method: :delete, data: { confirm: t('action.destroyconfirme') } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div><!-- /.row -->
    <%= link_to t('group.new_group_label'), new_group_path, class:'btn btn-default' %>
  </div>
  <br>
  <br>
</div>