<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1> <%= t('right.title') %> <small><%= t('right.description') %></small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i>  <%= t('right.title') %> </li>
      </ol>
    </div>
  </div>

  <div>
    <div class="row">
      <div class="col-lg-6">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
            <tr>
              <th><%= t('name_label') %><i class="fa fa-sort"></i></th>
              <th><%= t('availability') %> <i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
              <th><i class="fa fa-sort"></i></th>
            </tr>
            </thead>

            <tbody>
            <% @rights.each do |right| %>
                <tr>
                  <td><%= right.name %></td>
                  <td><%= right.is_available %></td>
                  <td><%= link_to t('action.show'), right %></td>
                  <td><%= link_to t('action.edit'), edit_right_path(right) %></td>
                  <td><%= link_to t('action.destroy'), right, method: :delete, data: { confirm: t('action.destroyconfirme') } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div><!-- /.row -->
    <%= link_to t('right.new_right_label'), new_right_path, class:'btn btn-default' %>
  </div>
  <br>
</div>